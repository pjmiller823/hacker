<div class="page-header">
  <%= link_to new_story_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Story
  <% end %>
  <h1 Listing>stories</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Email</th>
        <th>Created</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%= paginate @stories %>
      <% @stories.each.with_index do |story, index| %>
      <tr>
        <td><%= index + 1 + @starting_number %></td>
        <td><%= link_to story.title, story.link %></td>
        <td><%= story.email %></td>
        <td><%= distance_of_time_in_words(Time.now.to_i - story.created_at.to_i) %> ago</td>
        <td>
          <%= link_to story do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_story_path(story) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
